{
  "name": "GitHubControl",
  "version": "0.0.0",
  "description": "This application tracks versions of package.json files dependencies at github repositories",
  "author": "Nikita Glukhi <nikita.glukhi@valor-software.com>",
  "license": "MIT",
  "scripts": {
    "start:frontend": "cd src/static && ng serve",
    "start": "cd src && ts-node -r tsconfig-paths/register main.ts",
    "build": "cd src/static && ng build",
    "build:watcher": "cd src/static && ng build && nodemon --output-path dist --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:prod": "node dist/main.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.1.10",
    "@angular/common": "6.1.10",
    "@angular/compiler": "6.1.10",
    "@angular/core": "6.1.10",
    "@angular/forms": "6.1.10",
    "@angular/http": "6.1.10",
    "@angular/platform-browser": "6.1.10",
    "@angular/platform-browser-dynamic": "6.1.10",
    "@angular/router": "6.1.10",
    "@nestjs/common": "5.4.0",
    "@nestjs/core": "5.4.0",
    "@nestjs/mongoose": "5.2.2",
    "@nestjs/websockets": "5.4.0",
    "@types/cron": "1.3.0",
    "@types/lodash": "4.14.118",
    "@types/socket.io-client": "1.4.32",
    "compare-versions": "3.4.0",
    "core-js": "2.5.7",
    "cors": "2.8.4",
    "cron": "1.6.0",
    "lodash": "4.17.11",
    "moment": "2.23.0",
    "mongoose": "5.3.12",
    "ngx-bootstrap": "3.2.0",
    "nodemon": "1.18.10",
    "prettier": "1.15.2",
    "request": "2.88.0",
    "rxjs": "6.3.3",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.8.7",
    "@angular/cli": "6.2.4",
    "@angular/compiler-cli": "6.1.10",
    "@angular/language-service": "6.1.10",
    "@nestjs/testing": "5.4.0",
    "@types/express": "4.16.0",
    "@types/lodash": "4.14.118",
    "@types/mongoose": "5.3.1",
    "@types/node": "10.12.9",
    "codelyzer": "4.3.0",
    "prettier": "1.15.2",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.7.0",
    "tslint": "5.11.0",
    "typescript": "2.9.2",
    "typings-for-css-modules-loader": "1.7.0",
    "webpack": "4.26.0",
    "webpack-cli": "3.1.2",
    "webpack-node-externals": "1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
